---
import AnilKarasahPhoto from '/anilkarasah.webp'
---

<container>
  <div class="container welcome-text">
    <div id="introduce">
      <h1>Hi, I am</h1>
      <h1 id="title-anilkarasah" tabindex="0">Anıl Karaşah</h1>
    </div>
    <img src={AnilKarasahPhoto} alt="Picture of Anıl Karaşah" />
  </div>
</container>

<style>
  container {
    --text-color: var(--color-primary);
    --welcome-container-height: 50rem;

    display: flex;
    justify-content: space-between;
    height: var(--welcome-container-height);
    font-size: 1.5rem;
    background: var(--color-header-bg);
    background: linear-gradient(
      to bottom right,
      var(--color-header-bg) 0%,
      var(--color-header-fade-to) 100%
    );
    color: var(--text-color);
    position: relative;
  }

  #introduce {
    z-index: 10;
    display: flex;
    flex-direction: column;
  }

  #introduce h1 {
    font-weight: 600;
  }

  #introduce h1#title-anilkarasah {
    display: block;
    animation: anilkarasah-animation 5s infinite;
  }

  container img {
    height: var(--welcome-container-height);
    aspect-ratio: 1 / 1.618;
    object-fit: cover;
    object-position: center center;
    top: 0;
    z-index: 1;
  }

  .welcome-text {
    height: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
  }

  @media (max-width: 600px) {
    container {
      --welcome-container-height: 65rem;

      position: relative;
      --text-color: var(--color-secondary);
      padding: 0;
    }

    #introduce {
      width: 95vw;
      position: relative;
      color: white;
      background: rgb(30, 129, 158);
      background: linear-gradient(
        0deg,
        rgba(30, 129, 158, 1) 0%,
        rgba(255, 255, 255, 0) 100%
      );
    }

    #introduce h1 {
      line-height: 6rem;
    }

    .welcome-text {
      justify-content: center;
      align-items: flex-end;
      width: 100%;
      height: 100%;
    }

    container img {
      position: absolute;
      width: 95vw;
    }
  }

  @keyframes anilkarasah-animation {
    0% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10%);
    }
    100% {
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: no-preference) {
    #introduce h1#title-anilkarasah {
      animation: anilkarasah-animation 5s infinite;
    }
  }
</style>
