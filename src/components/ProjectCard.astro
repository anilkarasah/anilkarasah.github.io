---
import '../styles/global.css'
const { frontmatter } = Astro.props.project
---

<article class="flex flex-column">
  <a
    href={frontmatter.titleLink}
    class="animate card-title"
    target="_blank"
    rel="noopener"
    title={frontmatter.titleLinkAltText}
  >
    {frontmatter.title}
  </a>
  <p>
    {frontmatter.description}
  </p>
</article>

<style>
  article {
    padding: 1rem;
    width: 32%;
    height: 16rem;
    border-radius: 1rem;
    background-color: var(--color-primary);
    box-shadow: #0002 3px 3px 10px 1px;
    gap: 1rem;
  }

  a:not(.card-title)[target^='_blank'] {
    font-weight: 600;
  }

  a.card-title {
    font-weight: 600;
    font-size: 1.2rem;
    line-height: 2rem;
    text-align: center;
  }

  p {
    height: 100%;
    font-size: 1rem;
    line-height: 1.4rem;
    text-align: justify;
    overflow-y: auto;
  }

  @media (max-width: 500px) {
    article {
      padding: 1rem;
      width: 100%;
      height: 12rem;
    }

    a.card-title {
      line-height: 2rem;
    }
  }
</style>
